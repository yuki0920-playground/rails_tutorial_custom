- provide(:title, @user.name)
.row
  %aside{ class: 'col-md-4' }
    %section{ class: 'user_info' }
      %h1
        = gravatar_for @user
        = @user.name
    %section.stats
      = render 'shared/stats'
  .col-md-8
    = render 'follow_form' if logged_in?
    - if @user.microposts.any?
      %h3 Microposts "#{@user.microposts.count}"
      %ol{ class: 'microposts' }
        = render @microposts
      = will_paginate @microposts
