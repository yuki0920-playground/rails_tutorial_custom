- provide(:title, 'Log in')
%h1 Log in

.row
  .col-md-6.col-md-offset-3
    = form_with(url: login_path, scope: :session, local: true) do |f|
      = f.label User.human_attribute_name :email
      = f.email_field :email, class: 'form-control', id: 'auth_email'

      = f.label User.human_attribute_name :password
      = link_to '(forgot password)', new_password_reset_path
      = f.password_field :password, class: 'form-control', id: 'auth_password'
      = f.label :remember_me, class: 'checkbox inline' do
        = f.check_box :remember_me
        %span Remember me on this computer

      = f.submit 'ログイン', class: 'btn btn-primary'
    %p
      New user?
      = link_to 'Sign up now!', signup_path
